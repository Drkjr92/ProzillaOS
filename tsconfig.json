{
	"compilerOptions": {
		/* Language and Environment */
		"target": "ESNext",
		"jsx": "react-jsx",
		
		/* Modules */
		"module": "commonjs",
		"moduleResolution": "Node",
		"types": ["webpack-env"],
		"allowUmdGlobalAccess": true,
		"resolveJsonModule": true,
		
		/* JavaScript Support */
		"allowJs": true,
		"checkJs": true,
		
		/* Emit */
		"noEmit": true,
		
		/* Interop Constraints */
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		
		/* Type Checking */
		"strict": false,
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"./node_modules",
		"./build",
		"./dist",
		"./.vscode"
	]
}